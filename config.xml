<?xml version='1.0' encoding='utf-8'?>
<widget id="il.co.ilotto" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ilotto</name>
    <description>
        i-Lotto
    </description>
    <author email="dspivak152@gmail.com" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#40427b" />
    <preference name="StatusBarStyle" value="blacktranslucent" />
    <preference name="permissions" value="none" />
    <preference name="orientation" value="portrait" />
    <preference name="target-device" value="universal" />
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="android-installLocation" value="auto" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="platforms/android/res/ldpi.png" />
        <icon density="mdpi" src="platforms/android/res/mdpi.png" />
        <icon density="hdpi" src="platforms/android/res/hdpi.png" />
        <icon density="xhdpi" src="platforms/android/res/xhdpi.png" />
        <icon density="xxhdpi" src="platforms/android/res/xxhdpi.png" />
        <icon density="xxxhdpi" src="platforms/android/res/xxxhdpi.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="Device" />
    <plugin name="cordova-plugin-device" spec="^1.1.6" />
    <plugin name="cordova-plugin-googleplus" spec="^5.1.1">
        <variable name="REVERSED_CLIENT_ID" value="994611551395-okvik9e0u7ck94iea0pb04q3a9vimnnd.apps.googleusercontent.com" />
    </plugin>
    <plugin name="cordova-plugin-inappbrowser" spec="^1.7.1" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
    <plugin name="phonegap-plugin-push" spec="^1.10.5">
        <variable name="SENDER_ID" value="85075801930" />
    </plugin>
</widget>
